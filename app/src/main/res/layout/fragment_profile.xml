<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/profile_picture"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_default_profile" />

    <TextView
        android:id="@+id/username_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp">

        <RatingBar
            android:id="@+id/user_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="0.1"
            android:isIndicator="true" />

        <TextView
            android:id="@+id/rating_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(0.0)"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <Button
        android:backgroundTint="@color/warm_amber"
        android:id="@+id/your_listings_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Listings"
        android:layout_marginTop="16dp" />

    <Button
        android:backgroundTint="@color/warm_amber"
        android:id="@+id/saved_listings_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Saved Listings"
        android:layout_marginTop="8dp" />

    <Button
        android:backgroundTint="@color/warm_amber"
        android:id="@+id/chat_history_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chat History"
        android:layout_marginTop="8dp" />

    <Button
        android:backgroundTint="@color/warm_amber"
        android:id="@+id/tool_requests_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tool Requests"
        android:layout_marginTop="8dp" />

    <Button
        android:backgroundTint="@color/warm_amber"
        android:id="@+id/public_profile_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Public Profile"
        android:layout_marginTop="8dp" />
</LinearLayout>